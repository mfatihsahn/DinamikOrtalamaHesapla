<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <AutoCompleteTextView
        android:id="@+id/etYeniDersAd"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/transparent"
        android:popupBackground="@color/colorAccent"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnYeniHarfNotu" />

    <Spinner
        android:id="@+id/spnYeniDersKredi"
        android:layout_width="149dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/krediler"
        android:backgroundTint="@color/colorAccent"
        android:popupBackground="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/etYeniDersAd"
        app:layout_constraintTop_toBottomOf="@+id/spnYeniHarfNotu" />

    <Spinner
        android:id="@+id/spnYeniHarfNotu"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:entries="@array/tumDerslerinBilgileri"
        android:backgroundTint="@color/colorAccent"
        android:popupBackground="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/btnYeniDersSil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnYeniDersSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sub_btn"
        app:layout_constraintBottom_toBottomOf="@+id/etDersAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etDersAd"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnYeniDersKredi">

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>

